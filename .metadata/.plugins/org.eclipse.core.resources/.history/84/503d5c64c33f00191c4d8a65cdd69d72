package testscale;

import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics2D;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

public class Test {
	
 public static void main(String[] args) {
	 
	 BufferedImage testImage = new BufferedImage(500, 500, BufferedImage.TYPE_INT_BGR);
	 
	 File myfile = new File("c:\\testpic.png");
	 
	 String pictype = "png";
	 
	 Graphics2D drawgraphic = (Graphics2D)testImage.getGraphics();
	 
	 drawgraphic.setColor(Color.RED);
	 
	 drawgraphic.setFont(new Font("新宋体",Font.BOLD, 200));
	 
	 drawgraphic.drawString("我", 100, 200);
	 
	 drawgraphic.dispose();
	 
	 
     boolean val = false;
     try {
         val = ImageIO.write(testImage, pictype, myfile);
     } catch (IOException e) {
         e.printStackTrace();
     }

	 
	 
	 System.out.println("画图成功");
	 
	
 }

}
