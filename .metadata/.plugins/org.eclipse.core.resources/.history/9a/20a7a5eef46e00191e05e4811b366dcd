package windows;

import java.awt.EventQueue;

import javax.swing.JFrame;
import java.awt.GridLayout;
import javax.swing.JCheckBox;
import javax.swing.JButton;
import javax.swing.SwingConstants;
import java.awt.Font;

public class chooseWindows {

	private JFrame frame;

	public JFrame getFrame() {
		return frame;
	}

	/**
	 * Launch the application.
	 */

	/**
	 * Create the application.
	 */
	public chooseWindows() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setBounds(100, 100, 206, 190);
		frame.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		frame.getContentPane().setLayout(new GridLayout(0, 1, 0, 0));
		
		JCheckBox checkBox = new JCheckBox("\u4E0A\u5348\u672A\u6253");
		checkBox.setFont(new Font("黑体", Font.PLAIN, 16));
		checkBox.setHorizontalAlignment(SwingConstants.CENTER);
		frame.getContentPane().add(checkBox);
		
		JCheckBox chckbxNewCheckBox = new JCheckBox("下午未打");
		chckbxNewCheckBox.setFont(new Font("黑体", Font.PLAIN, 16));
		chckbxNewCheckBox.setHorizontalAlignment(SwingConstants.CENTER);
		frame.getContentPane().add(chckbxNewCheckBox);
		
		JButton btnNewButton = new JButton("提交");
		frame.getContentPane().add(btnNewButton);
	}

}
